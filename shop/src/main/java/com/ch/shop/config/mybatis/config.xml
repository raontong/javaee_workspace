<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<typeAliases>
		<typeAlias type="com.ch.shop.dto.TopCategory"		alias="TopCategory"/>
		<typeAlias type="com.ch.shop.dto.SubCategory"		alias="SubCategory"/>
		<typeAlias type="com.ch.shop.dto.Color"				alias="Color"/>
		<typeAlias type="com.ch.shop.dto.Size"					alias="Size"/>
		<typeAlias type="com.ch.shop.dto.Product"			alias="Product"/>
		<typeAlias type="com.ch.shop.dto.ProductColor"		alias="ProductColor"/>
		<typeAlias type="com.ch.shop.dto.ProductSize"		alias="ProductSize"/>
		<typeAlias type="com.ch.shop.dto.ProductImg"		alias="ProductImg"/>
	</typeAliases>

  <!-- 더이상 spring이 UserWebConfig에서 주도하므로 필요 없다.
 	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="JNDI">
			lookup("java:comp/env/jndi/mysql")
				<property name="data_source" value="java:comp/env/jndi/mysql" />
			</dataSource>
		</environment>
	</environments> -->

	<!-- 자바 코드 대신, 쿼리문을 작성해놓은 파일을 가리켜 매퍼라 하며, 매퍼의 위치는 아래의 mappers 태그의 자식 태그로 
		등록해야 함 -->
  
  
  <!-- 자바 코드 대신, 쿼리문을 작성해 놓은 파일을 가리켜 매퍼라 하며 , 
  		 매퍼의 위치는 아래의 mappers 태그의 자식 태그로 등록해야함..  -->
	<mappers>
	    <mapper resource="com/ch/shop/config/mybatis/TopCategoryMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/SubCategoryMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/ColorMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/SizeMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/ProductMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/ProductColorMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/ProductSizeMapper.xml"/>
	    <mapper resource="com/ch/shop/config/mybatis/ProductImgMapper.xml"/>
	  </mappers>
</configuration>